{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"outDir": "./build",
		"rootDir": ".",
		"target": "ES2020",
		"baseUrl": "./src/",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src/**/*", "tests/**/*"]
}
